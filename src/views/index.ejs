<%- include("partials/header.ejs") %>

<div class="date">
  <% const date = new Date() %> <% const options = { year: 'numeric', month:
  'long', day: 'numeric' }; %> <% const formattedDate =
  date.toLocaleDateString('en-US', options); %>

  <h2><%= formattedDate %></h2>
</div>


  <div class="w-25 card bg-secondary task-list ">
  <% locals.tasks.map((task)=>{ %>
  <div class="form-check ">
    <input
      class="form-check-input"
      type="checkbox"
      value=""
      id="flexCheckIndeterminate"
    />
    <label class="form-check-label" for="flexCheckIndeterminate">
      
        <%= task %>
      
    </label>
  </div>
  <% }) %>
  
</div>

<form action="/submit" method="POST">
  <div class="mb-3">
    <!-- <label for="exampleEnterTask" class="form-label">Enter Task</label> -->
    <input type="text" class="form-control" name="task" placeholder="Enter task" >
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
  </div>
</form>

<%- include("partials/footer.ejs") %>
